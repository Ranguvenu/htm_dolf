<div id="events_block_container">
    <div class="block_header border-themecolor2 mb-3 pb-2  d-flex justify-content-between align-items-center">
        <h4 class="text-themecolor m-0">{{#str}}events_nactivities,theme_academy{{/str}}</h4>
        <div class="blockicon piximg">
            {{#pix}}eventsblock_icon,local_events{{/pix}}
        </div>
    </div>
    {{# totalevents}}
    <div class="event_card card border-0 mb-3">
        <div class="card-body">
            <h5 class="text-truncate mb-3">{{eventname}}</h5>
            <div class="eventimagecontainer mb-3" {{#imageurl}} style="background-image:url('{{{imageurl}}}')" {{/ imageurl}}></div>
            <div class="maincontent position-relative">
                <div class="w-100 bg-themecolor3 rounded p-2">
                    <div class="activity_icons mb-3 d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <span class="calendericon activity_icon"></span> <span>{{eventstartdate}}</span>
                        </div>
                         <div class="d-flex align-items-center text-nowrap">
                            <span class="timeicon activity_icon"></span> <span>{{starttime}}</span>
                        </div>
                    </div>
                    
                    
                    
                    <div class="row activity_icons mb-3 d-flex align-items-center justify-content-between">
                         <div class="col-12 d-flex align-items-center">
                            <span class="mapmarkericon activity_icon"></span> <span>{{location}}</span>
                        </div>
                    </div>
                    <div class="activity_icons mb-3 d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <span class="speakerpersonicon activity_icon"></span> <span>{{#str}} keynote_speaker,theme_academy{{/str}}{{speaker}}</span>
                        </div> 
                    </div>
                    <div class="row activity_icons mb-3 d-flex align-items-center justify-content-between">
                       
                        <div class="col-12 d-flex align-items-center">
                            <span class="timericon activity_icon"></span> <span>{{duration}}</span>
                        </div>
                    </div>
                </div>
                <a href="{{viewdetailsurl}}">
                    <div class="eventmorebtn"></div>
                </a>
            </div>
            
        </div>
    </div>
   
    <div class="viewmorebtn_container d-flex align-items-center justify-content-center">
        <a href="{{viewmoreurl}}" class="btn  btn-outline-primary font-weight-bold text-black">{{#str}}viewmore,local_learningtracks{{/str}}</a>
    </div>
{{/ totalevents}}
</div>