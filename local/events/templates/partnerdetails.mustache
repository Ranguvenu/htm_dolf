<table class='generaltable' id="partnerlisttable">
    <tbody>
        <tr><td>{{#str}} partnername,local_events{{/str}}</td><td>{{partnername}}</td></tr>
        {{#showprice}}
            <tr><td>{{#str}}sellingprice,local_events{{/str}}</td><td>{{sellingprice}}</td></tr>
            <tr><td>{{#str}}actualprice,local_events{{/str}}</td><td>{{actualprice}}</td></tr>
        {{/showprice}}

        <tr><td>{{#str}} description,local_events{{/str}}</td>
            <td>{{# isdescription}} {{{description}}} {{/ isdescription}}
             {{^ isdescription }}
                <p class="">{{#str}}nodesc, local_events{{/str}}</p>
            {{/ isdescription }}
            </td>
        </tr>
        <tr><td>{{# str}}logo, local_events{{/ str}}</td><td> 
            {{#logo}}
                <div class="partnerlogo">
                <img src ="{{logo}}">
                </div>
            {{/logo}}
            {{^logo}}
                --
            {{/logo}}
        </td></tr>
    </tbody>
</table>