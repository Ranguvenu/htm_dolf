                    <div class="row my-4" id="eventdetailscontainer">
                        <div class="col-md-12">
                            <h4 class="mb-3 mt-2">{{#str}}agenda,local_events{{/str}}</h4>
                            {{# agendadata}}
                            <div class="bg-white shadow rounded p-3 mt-2">
                                <div class="event_agenda">
                                    
                                    <!-- Topic start -->
                                    <div class="event_section_header d-flex align-items-center justify-content-between collapsed" data-toggle="collapse" href="#section-{{agendano}}">
                                        <div class="d-flex align-items-center justify-content-between flex-grow-1">
                                            <h6 class="m-0">{{#str}}agenda,local_events{{/str}}{{agendano}} : <strong>{{agendatopic}}</strong></h6>
                                        </div>
                                    </div>
                                    <div class="event_section_content_container collapse" id="section-{{agendano}}">
                                        <div class="p-2">
                                            <p> {{{agenda_description}}}</p>
                                            <hr>
                                            <div class="d-flex topic_footer font-weight-bold mb-3">
                                                <div class=" activity_icons d-flex align-items-center mr-4">
                                                    <span class="calendericon activity_icon"></span> <span>{{agendaday}}</span>
                                                </div>
                                                <div class="d-flex align-items-center mr-4">
                                                    <span class="piximg">{{# pix }} eventtopictimeicon, local_events {{/ pix }}</span> <span>{{agendatime}}</span>
                                                </div>
                                                <div class="d-flex align-items-center">
                                                    <span class="piximg">{{# pix }} eventtopicspeakericon, local_events {{/ pix }}</span> <span>{{agendaspeaker}}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                   
                                    <!-- Topic end -->
                                </div>
                            </div>
                             {{/agendadata}}
                        </div>
                    </div>
                    <div class="my-3">
                        <h4> {{#str}}language,local_events{{/str}}</h4>
                        <h6 class="my-4 text-black">{{eventlanguage}}</h6>
                    </div>
                    {{#orgofficial}}
                    <div class="sponsers mb-3">
                        <h4>{{#str}}eventpartners,local_events{{/str}}</h4>
                        <div class="d-flex flex-wrap">
                            {{#partnerdata}}
                            <div class="rounded border imgcontainer m-2">
                                <img class="icon" alt="{{partnername}}" aria-hidden="true" src="{{partnerlogo}}">
                            </div>
                            {{/partnerdata}}
                        </div>
                    </div>

                    <div class="sponsers mb-3">
                        <h4>{{#str}}eventsponsorscatplatinum,local_events{{/str}}</h4>
                        <div class="d-flex flex-wrap">
                            {{#platinum_sponsordata}}
                            <div class="rounded border imgcontainer m-2">
                                <img class="icon" alt="{{sponsorname}}" aria-hidden="true" src="{{sponsorlogo}}">
                            </div>
                            {{/platinum_sponsordata}}
                        </div>
                    </div>

                    <!--Gold Sponsor-->
                    <div class="sponsers mb-3">
                        <h4>{{#str}}eventsponsorscatgold,local_events{{/str}}</h4>
                        <div class="d-flex flex-wrap">
                            {{#gold_sponsordata}}
                            <div class="rounded border imgcontainer m-2">
                                <img class="icon" alt="{{sponsorname}}" aria-hidden="true" src="{{sponsorlogo}}">
                            </div>
                            {{/gold_sponsordata}}
                        </div>
                    </div>
                    <!--Gold Sponsor End-->
                    <!--Silver Sponsor-->
                    <div class="sponsers mb-3">
                        <h4>{{#str}}eventsponsorscatsilver,local_events{{/str}}</h4>
                        <div class="d-flex flex-wrap">
                            {{#silver_sponsordata}}
                            <div class="rounded border imgcontainer m-2">
                                <img class="icon" alt="{{sponsorname}}" aria-hidden="true" src="{{sponsorlogo}}">
                            </div>
                            {{/silver_sponsordata}}
                        </div>
                    </div>
                    <!--Silver Sponsor End-->

                    {{/orgofficial}}
                    
                </div>
                <div class="col-md-4">
                    {{#launchbtn}}
                        <a href="{{joinurl}}" class="btn btn-primary my-3" target="_blank">{{#str}}launch_metting,mod_zoom{{/str}}</a>
                    {{/launchbtn}}
                    <div class="eventdetailscontainer">
                        <h4>{{#str}}details,local_events{{/str}}</h4>
                        <div class="detail_content">
                            <h6>{{#str}}start,local_events{{/str}}</h6>
                            <p>{{startdate}}</p>
                        </div>
                        <div class="detail_content">
                            <h6> {{#str}}end,local_events{{/str}} </h6>
                            <p>{{enddate}}</p>
                        </div>
                    </div>
                    <div class="eventdetailscontainer">
                        <h4>{{#str}}reg_details,local_events{{/str}}</h4>
                        <div class="detail_content">
                            <h6> {{#str}}start,local_events{{/str}} </h6>
                            <p> {{reg_startdate}}</p>
                        </div>
                        <div class="detail_content">
                            <h6> {{#str}}end,local_events{{/str}} </h6>
                            <p>{{reg_enddate}}</p>
                        </div>
                    </div>
                    <div class="eventdetailscontainer">
                        <h4>{{#str}}otherdetails,local_events{{/str}}</h4>
                        <div class="detail_content">
                            <h6>{{#str}}gender,local_events{{/str}} </h6>
                            <p>{{eventgender}}</p>
                        </div>
                        <div class="detail_content">
                            <h6>{{#str}}status,local_events{{/str}}</h6>
                            <p>{{eventstatus}}</p>
                        </div>
                        <div class="detail_content">
                            <h6>{{#str}}eventtype,local_events{{/str}}</h6>
                            <p>{{eventtype}}</p>
                        </div>
                        {{#logisticsbudget}}
