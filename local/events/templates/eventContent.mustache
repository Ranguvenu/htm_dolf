                            </div>
                        {{/logisticsbudget}}
                        <!--<div class="detail_content">
                            <h6>{{#str}}actualbudget,local_events{{/str}}</h6>
                            <p> {{actualbudget}}</p>
                        </div>-->

                        <div class="detail_content">
                            <h6>{{#str}}eventmanager,local_events{{/str}}</h6>
                            <p>{{eventmanager}} </p>
                        </div>

                        <div class="detail_content">
                            <h6>{{#str}}eventmethod,local_events{{/str}}</h6>
                            <p>{{eventsmethod}} </p>
                        </div>
                    </div>
                </div>

                

            </div>
        </div>
    </div>
</div>
