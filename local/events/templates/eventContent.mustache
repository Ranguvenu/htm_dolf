{{#event}}
<div id="events_main_container">
    <div class="row">        
           {{^ iscancelled}}
            {{# actions}}
                    <div class="col-md-12 text-right mb-4">
                        <a href = "{{financeurl}}" class="btn btn-primary m-2">{{#str}}finance,local_events{{/str}}</a>
                        <a href = "{{agedatopicurl}}" class="btn btn-primary m-2">{{#str}}agendatopic,local_events{{/str}}</a>
                        <a href = "{{attendeeusrl}}" class="btn btn-primary m-2">{{#str}}attendees,local_events{{/str}}</a>
                        <a href = "{{speakersurl}}" class="btn btn-primary m-2">{{#str}}speakers,local_events{{/str}}</a>
                        <a href = "{{sponsorurl}}" class="btn btn-primary m-2">{{#str}}sponsors,local_events{{/str}}</a>
                        <a href = "{{partnersurl}}" class="btn btn-primary m-2">{{#str}}eventpartners,local_events{{/str}}</a>
                    </div>
                {{/ actions}}
            {{/ iscancelled}}
            {{#  iscancelled}}
            <h4>{{#str}} eventstatus,local_events {{/str}} :  {{cancelstatus}}</h4>
            {{/  iscancelled}}
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-8">
                    <!-- image container -->
                    <div class="eventimagecontainer" style="background-image: url('{{ eventimg }}');"></div>
                    <div class="details_container my-4">
                        <h4 class="mb-3">{{eventname}}</h4>
                          {{# isdescription}}
                            <p> {{{eventdescription}}} </p>
                          {{/ isdescription}}
                          {{^ isdescription }}
                            <p class="alert alert-info text-center">{{#str}}nodesc, local_events{{/str}}</p>
                          {{/ isdescription }}
                    </div>
                    {{#showhall}}
                      <div class="available_halls_section mb-4">
                        <h4 class="mb-3">{{#str}}availablehalls,local_events{{/str}}</h4>
                        <div id="hall_records" class="{{^hallslimit}} hide {{/hallslimit}}">
                        {{#halldata}}
                        <div class="list-group-item border rounded d-flex available_hall_details {{^hallfull}}selected{{/hallfull}} mb-2">
                            <div class="section_content">
                                <h5>{{hallcount}}. {{hallname}} {{#hallfull}}<span class="badge badge-dark">FULL</span>{{/hallfull}} </h5>
                                <div class="d-flex flex-wrap">
                                    <div class="mr-3 mt-2">{{#str}}city,local_events{{/str}} : <strong>{{city}}</strong></div>
                                    <div class="mr-3 mt-2">{{#str}}buildingname,local_events{{/str}} : <strong>{{buildingname}}</strong></div>
                                    <div class="mr-3 mt-2">{{#str}}seatingcapacity,local_events{{/str}} : <strong>{{seatingcapacity}}</strong></div>
                                    <div class="mr-3 mt-2">{{#str}}availableon,local_events{{/str}} : <strong>{{availableon}}</strong></div>

                                    {{# locationstatus}}
                                        <div class="mr-3 mt-2">{{# str}} location, local_trainingprogram{{/ str}} : <a href="{{maplocation}}"><strong><i class="fa fa-map-marker"></i></strong></a></div>
                                    {{/ locationstatus}}
                                    {{^ locationstatus}}
                                        <div class="mr-3 mt-2">{{# str}} location, local_trainingprogram{{/ str}} : {{maplocation}}</div>
                                    {{/ locationstatus}}

                                </div>
                            </div> 
                        </div>
                         {{/halldata}}
                        </div>
                        <div id="more_records" class="">
                        {{^hallslimit}}
                        {{#morehalls}}
