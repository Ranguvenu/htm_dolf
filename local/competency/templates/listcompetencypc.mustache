{{#response}}
    {{^records}}
    {{#nodata}}
        <div class = 'w-100 pull-left alert alert-info'>{{nodata}}</div>
    {{/nodata}}
    {{/records}}
    {{#viewtypeCard}}
        <table class="table generaltable">
            <thead>
                <tr>
                    <th colspan="{{#records.0}}{{#action}}5{{/action}}{{^action}}4{{/action}}{{/records.0}}"><b>{{competencyname}}</b></th>

                </tr>
            </thead>
            <tbody>
                {{#records}}
                <tr>
                    <td>{{criterianame}}</td>

                    <td>{{kpiname}}</td>

                    <td>{{objectiveid}}</td>

                    <td>
                        <button class="btn btn-primary btn-sm competencyobj" data-action="viewcompetencylearningcontent" data-id="{{id}}" data-competencyid="{{id}}" data-name="{{competencyname}} {{criterianame}}" data-contenttype="competencypc">{{#str}}learningcontent,local_competency{{/str}}</button>
                    </td>
                    
                    {{#action}}
                        <td>
                            <div class="d-flex action_btns">

                                {{#assignobjectives}}

                                    <button class="btn btn-primary btn-sm competencyobj" data-action="editcompetencyobjective" data-id="{{id}}" data-competencyid="{{competencyid}}" data-name="{{competencyname}}"title={{#str}}assignobjective,local_competency{{/str}}>{{#str}}assign,local_competency{{/str}}</button>

                                {{/assignobjectives}}

                                {{#edit}}

                                    <span class="bg-success text-white ml-1" data-action="editcompetencyperformance" data-id="{{id}}" data-competencyid="{{competencyid}}" data-name="{{criterianame}}"title={{#str}}edit,local_competency{{/str}}><i class="fa fa-edit" aria-hidden="true"></i></span>

                                {{/edit}}

                                {{#delete}}

                                    <span class="bg-danger text-white ml-1" data-action="deletecompetencypc" data-id="{{id}}" data-competencyid="{{competencyid}}" data-competencyname="{{criterianame}}"title={{#str}}delete,local_competency{{/str}}><i class="fa fa-trash-o" aria-hidden="true"></i></span>

                                {{/delete}}

                            </div>
                        </td>
                    {{/action}}
                </tr>
                {{/records}}
            </tbody>
        </table>
   {{/viewtypeCard}}
{{/response}}               