<div id="trainings_block_container">
		<div class="row block_header mx-0 border-themecolor2 mb-4">
			<div class="col-sm-2 p-2 ">
				<h4 class="text-themecolor">{{#str}}my_trainingprograms,local_trainingprogram{{/str}}</h4>
			</div>
			<div class="col-sm-12 p-0">
				<ul class="nav nav-tabs justify-content-end border-0" id="training_tabs" role="tablist">
					<li class="nav-item">
						<a class="nav-link active" id="currenttraining-tab" data-toggle="tab" href="#currenttraining-tabcontent" role="tab" aria-controls="currenttraining" aria-selected="true">{{#str}}in_progress_data, local_trainingprogram{{/str}}</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" id="completed-tab" data-toggle="tab" href="#completedtraining-tabcontent" role="tab" aria-controls="completed" aria-selected="false">{{#str}}completed, local_trainingprogram{{/str}}</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" id="recommendedprogram-tab" data-toggle="tab" href="#recommendedprogram-tabcontent" role="tab" aria-controls="completed" aria-selected="false">{{#str}}recommended_programs, local_userapproval{{/str}}</a>
					</li>
				</ul>
			</div>
		</div>
        <div class="tab-content" id="training_tabs_content">
            <div class="tab-pane show active" id="currenttraining-tabcontent" role="tabpanel" aria-labelledby="currenttraining-tab">
				<!-- new thing -->
				{{# total_in_progress_programs}}
				<div class="training_program_container row mt-2 mb-3 border-bottom">
					<div class="col-sm-2 py-2 px-1">
						<div class="d-flex h-100 bg-secondary rounded border program_img" {{#imageurl}} style="background-image:url('{{{imageurl}}}')" {{/ imageurl}}>
						</div>
					</div>
					<div class="col-sm-8">
						<h5 class="my-2"><a href="{{{programviewurl}}}">{{programname}} </a></h5>
						<!-- <div class="d-flex align-items-center my-3">
							<span class="text-themecolor">Progress</span>
							<span class="mx-3 font-weight-bold text-themecolor2">50%</span>
							<div class="progress flex-grow-1">
								<div class="progress-bar bg-themecolor2" role="progressbar" aria-valuenow="70"
								aria-valuemin="0" aria-valuemax="100" style="width:70%">
								  <span class="sr-only">70% Complete</span>
								</div>
							</div>
						</div> -->
						<div class="d-flex timeinfo_container px-3 py-2 my-2 rounded justify-content-between">
							

							{{# datedisplay}} 

							<div class="d-flex align-items-center">
								<span class="piximg">{{#pix}}calendericon,local_trainingprogram{{/pix}}</span>
								<span>{{#str}}start_date,local_trainingprogram{{/str}} {{availablefrom}}</span>
							</div>
							
							<div class="d-flex align-items-center">
								<span class="piximg">{{#pix}}calendierwithcheck,local_trainingprogram{{/pix}}</span>
								<span>{{#str}}end_date,local_trainingprogram{{/str}} 
								{{availableto}}</span>
							</div>
							{{/ datedisplay}}
						
						</div>
						<div class="d-flex align-items-center my-3">
							<h6 class="text-themecolor2 m-0">{{#str}}in_progress, local_trainingprogram{{/str}}</h6>
							<span class="piximg threedotsicon mx-2">{{#pix}}threedotsicon,local_trainingprogram{{/pix}}</span>
							<!--<div>
								<button class="btn btn-outline-primary btn-sm px-4 mr-2 font-weight-bold"><a href="{{{programviewurl}}}">{{#str}}view_offerings, local_trainingprogram{{/str}}</a></button>-->
								<!-- <button class="btn btn-outline-primary btn-sm font-weight-bold">{{#str}}grades, local_trainingprogram{{/str}}</button> -->
							<!--</div>-->
						</div>

					</div>
					<div class="col-sm-2 d-flex align-items-center justify-content-center">
						<a href="{{{launchurl}}}" class="launchbtn">
							<span>{{#str}}launch,local_trainingprogram{{/str}}</span>
						</a>
					</div>
				</div>
				{{/ total_in_progress_programs}}
				{{^ total_in_progress_programs}}
				   <div class="text-center alert alert-info mt-1" data-region="empty-message">
				   	{{#str}} no_data_available, theme_academy {{/str}}
                    </div>
				{{/ total_in_progress_programs}}
				{{# in_progress_view_more_action}}
				<div class="viewmorebtn_container d-flex align-items-center justify-content-center">
					<a href="{{{viewmoreurl}}}" class="btn  btn-outline-primary font-weight-bold text-black">{{#str}}view_more, local_trainingprogram{{/str}}</a>
				</div>
				{{/ in_progress_view_more_action}}
				<!-- new things end -->
			</div>
			<div class="tab-pane" id="completedtraining-tabcontent" role="tabpanel" aria-labelledby="completed-tab">
				{{# completed_programs_view}}
				<table class="table trainings_content_table">

					<thead>
						<tr>
							<th colspan="2">{{#str}}courses, local_trainingprogram{{/str}}</th>
							<th class="text-center">{{#str}}completed_on, local_trainingprogram{{/str}}</th>
							{{# certificateview}}
							<th class="text-center">{{#str}}certificate, local_trainingprogram{{/str}}</th>
							{{/ certificateview}}
						</tr>
					</thead>
					<tbody>
						 {{# total_completed_programs}}
						<tr>
							<td>
								<div class="coursesimg" {{#imageurl}} style="background-image:url('{{{imageurl}}}')" {{/ imageurl}}></div>
							</td>
							<td>
								<div class="px-2 mt-3 training_data_container">
									<h5>{{programname}}</h5>
									<p>{{{description}}}</p>
								</div>
							</td>
							<td class="text-center">
								<div class="mb-2">{{timecompleted}}</div>
							</td>
							 {{# certificateview}}
							 	
									<td class="text-center">
										<a title="{{#certid}} {{#str}} download_certificate, local_trainingprogram {{/ str}} {{/certid}} {{^ certid}} {{#str}} certificate_not_available, local_trainingprogram {{/ str}} {{/certid}}" href="{{#certid}} {{viewcertificateurl}} {{/certid}} {{^ certid}} # {{/ certid}} "><i class="fa fa-download"></i></a>
									</td>
								
							{{/ certificateview}}
						</tr>
						 {{/ total_completed_programs}}
					</tbody>
					
				</table>
				
	
				{{/ completed_programs_view}}
				{{^ completed_programs_view}}
					<div class="text-center alert alert-info mt-1" data-region="empty-message">
				   	 {{#str}} no_data_available, theme_academy {{/str}}
                    </div>
				{{/ completed_programs_view}}

				{{# comp_count_view_more_action}}

				<div class="viewmorebtn_container d-flex align-items-center justify-content-center">
				<a href="{{{viewmoreurl}}}" class="btn  btn-outline-primary font-weight-bold text-black">{{#str}}view_more, local_trainingprogram{{/str}}</a>
			</div>
				{{/ comp_count_view_more_action}}
   
			</div>
       
         <div class="tab-pane show" id="recommendedprogram-tabcontent" role="tabpanel" aria-labelledby="recommendedprogram-tab">


         	 <table class="table table-striped">
        <thead>
            <tr>
              <th scope="col">{{# str}} program, local_userapproval{{/ str}}</th>
              <th scope="col">{{# str}} code, local_userapproval{{/ str}}</th>
              <th scope="col">{{# str}} startdate, local_userapproval{{/ str}}</th>
              <th scope="col">{{# str}} enddate, local_userapproval{{/ str}}</th>
              <th scope="col">{{# str}} price, local_userapproval{{/ str}}</th>
              <th scope="col">{{# str}} action, local_userapproval{{/ str}}</th>
            </tr>
          </thead>
          <tbody>
		    {{# totalrecommendedprograms}}
                <tr>
                  <th scope="row">{{entityname}}</th>
                  <td>{{entitycode}}</td>
                  <td>{{startdate}}</td>
                  <td>{{enddate}}</td>
                  <td>{{price}}</td>
                  <td><a href="{{enrollurl}}" class="btn btn-primary">{{# str}} enrol, local_userapproval{{/ str}}</a></td>
                </tr>
			{{/ totalrecommendedprograms}}
          </tbody>
    </table>
        {{# recommendedprogramscount_view_more_action}}
			<div class="viewmorebtn_container d-flex align-items-center justify-content-center">
				<a href="{{{viewmoreurl}}}" class="btn  btn-outline-primary font-weight-bold text-black">{{#str}}view_more, local_trainingprogram{{/str}}</a>
			</div>
		{{/ recommendedprogramscount_view_more_action}}
         </div>
        </div>
    
</div>
