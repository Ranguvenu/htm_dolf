{{#response}}
    {{#records}}
    <div class= "table-responsive">
        <table class="table">
            <thead class="thead-light">
                <tr>
                 
                  <th scope="col">{{# str}} programmethod, local_trainingprogram{{/ str}}</th>
                   <th class="text-center">{{# str}} actions, local_userapproval{{/ str}}</th>
                </tr>
            </thead>
          <tbody>
          {{# hascourses}}
              <tr>
                 
                    <td>{{name}}</td>
                     <td>
                      <div class="d-flex action_btns justify-content-center">
                         <a href="#"  data-action="createprogrammethod" data-id={{id}} data-toggle ="tooltip" title={{#str}}edit,local_trainingprogram{{/str}}><span class="bg-info text-white"><i class="fa fa-pencil"></i></span></a>
