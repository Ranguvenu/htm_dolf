{{#response}}
{{#records}}
<div id="halls_schedule">
    <div class="row">
        {{# hascourses}}
        <div class="col-md-12">
            {{#rr}}
            <div class="selected_nav row d-flex align-items-center mb-4 py-3 px-2 rounded hallreserveinfo">
                <div class="col-md-2">
                    <span class="d-block mb-1"><small>{{# str}}date, local_hall{{/ str}}</small></span>
                    <h6>{{reservationdate}}</h6>
                </div>
                <div class="col-md-2">
                    <span class="d-block mb-1"><small>{{# str}}event, local_hall{{/ str}}</small></span>
                    <h6>{{entity}}</h6>
                </div>
                <div class="col-md-4">
                    <span class="d-block mb-1"><small>{{# str}}duration, local_hall{{/ str}}</small></span>
                    <h6>{{slotstart}} to {{slotend}}</h6>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-4">
                            <span class="d-block mb-1"><small>{{# str}}total_seats, local_hall{{/ str}}</small></span>
                            <h6 >{{totalhallseats}}</h6>
                        </div>
                        <div class="col-md-4">
                            <span class="d-block mb-1"><small>{{# str}}reservedseats, local_hall{{/ str}}</small></span>
                            <h6 class="text-success" >{{reservedseats}}</h6>
                        </div>
                        <div class="col-md-4">
                            <span class="d-block mb-1"><small>{{# str}}remainingseats, local_hall{{/ str}}</small></span>
                            <h6 class="text-danger" >{{availableseats}}</h6>
                        </div>
                    </div>
                </div>
            </div>
            {{/ rr}}
            <div class="mt-5 row">
                <div class="col-md-12 p-0">
                    <table class="table generaltable">
                        <thead> 
                            <tr>
                                 <th><strong>{{# str}}beneficiary_code, local_hall{{/ str}}</strong></th>
                                 <th><strong>{{# str}}reservation_date_time, local_hall{{/ str}}</strong></th>
                                 <th><strong>{{# str}}purpose, local_hall{{/ str}}</strong></th>
                                 <th><strong>{{# str}}noofseats, local_hall{{/ str}}</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                        {{# aa}}
                            <tr>
                                <td>{{code}}</td>
                                <td>{{date}}, {{entityslotstart}} - {{date}}, {{entityslotend}}</td>
                                <td>{{type}} : {{modulename}}</td>
                                <td>{{bookedseats}}</td>
                            </tr>
                        {{/ aa}}
                        </tbody>
                    </table>
                </div>
                
            </div>
        </div>
        {{/ hascourses}}
    </div>
</div>
{{/ records}}
{{/ response}}

<div class="col-md-3 col-lg-3 filters_container">
    {{> local_hall/filters }}
</div>
