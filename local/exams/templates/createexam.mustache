    {{# examdetailsactions}}
        {{# examattempts}}
        
            <button class="addattempt btn btn-primary mr-2" data-examid={{examid}} data-action="editattempt"><i class="fa fa-plus" aria-hidden="true"></i>  {{#str}}addattempt, local_exams{{/str}}</button>
        {{/ examattempts}}

        {{^ examattempts}}
        
            <button class="addprofile btn btn-primary mr-2" data-examid={{examid}} data-action="addprofile"><i class="fa fa-plus" aria-hidden="true"></i>  {{#str}}addprofile, local_exams{{/str}}</button>
        <a href="{{config.wwwroot}}/local/exams/examusers.php?id={{examid}}" tabindex="0" role="button" class="btn btn-primary mr-2">
                        {{#str}}enrollments, local_exams{{/str}}
