        <a href="{{config.wwwroot}}/local/exams/bulkupload.php" tabindex="0" role="button" class="btn btn-primary mr-2">
                <i class="fa fa-upload" aria-hidden="true"></i>
                        {{#str}}uploadexams, local_exams{{/str}}
        </a>

        <a href="{{config.wwwroot}}/local/exams/profileupload.php" tabindex="0" role="button" class="btn btn-primary mr-2">
                <i class="fa fa-upload" aria-hidden="true"></i>
                        {{#str}}profileupload, local_exams{{/str}}
        </a>

        <a href="{{config.wwwroot}}/local/exams/fast_examenrol.php" tabindex="0" role="button" class="btn btn-primary mr-2">
