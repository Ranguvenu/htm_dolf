<div class="row">
    <div class="col-md-12">
        <div id="fastexamenroll_section">
            <div class="row my-3">
                <div class="col-md-4">
                    {{{globalinput}}}
                   
                </div>
                <div class="col-md-8">
                    <div class="d-flex justify-content-end align-items-center">
                        <button class="btn filter_toggle_btn" id="filter_open_btn">
                            <span class="piximg">{{#pix}}pageicons/filter,theme_academy{{/pix}}</span>
                            {{# str}} filter, local_userapproval{{/ str}}
                        </button>
                    </div>
                </div>
            </div>
            <div id="userapprovals_container">
                {{{fastexamenrol}}}
            </div>
        </div> 
    </div>
    <div class="filters_container">
         <div class="header_content">
            <div class="d-flex align-items-center justify-content-between">
                <h6> <span class="piximg filter_icon">{{#pix}} pageicons/filter,theme_academy {{/pix}}</span> {{# str}} filter, local_userapproval{{/ str}}</h6>
                <button class="btn btn-close filter_toggle_btn" id="filter_close_btn">
                    {{# str}} close_filter, local_exams{{/ str}}
                </button>
            </div>
             
            <div class="text-center border border-right-0 border-left-0 py-2 my-3">
                {{# str}} filter_discription, local_exams{{/ str}}
            </div>
        </div>
        <div class="filters_contents">
             {{{filterform}}}
        </div> 
    </div>
</div>
{{#js}}
    $('[data-fieldtype="date_time_selector"] select').prop('disabled',true); 
    $('[data-fieldtype="checkbox"] input').change( function() {
        if($(this).is(':checked')) {
           $(this).parent().parent().parent().find('select').prop('disabled',false);
        } else {
           $(this).parent().parent().parent().find('select').prop('disabled',true);
        }
    });
    $('[id="id_cancel"]').click( function() {
        $('[data-fieldtype="date_time_selector"] select').prop('disabled',true); 
    });
    require(['local_exams/examenrol'], function(s) {
        s.init();
    });
{{/js}}

