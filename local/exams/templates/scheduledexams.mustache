 require(['local_exams/grievance'], function(s) {
        s.init();
    });
    require(['local_exams/examschedules'], function(s) {
        s.init();
    });

    require(['jquery'], function($) {
        $(document).ready(function(){

            $("#question_bank_tabs li:nth-child(2) .nav-link ").click(function(){
                $(".review_exams_container, #manage_reviewexamsid").addClass('d-none');
            });

            $("#question_bank_tabs li:nth-child(1) .nav-link ").click(function(){
                $(".review_exams_container, #manage_reviewexamsid").removeClass('d-none');
            });


