{{#response}}
{{#records}}
    {{#hascourses}}
<div class="col-md-4 pb-3">
    <div class="card program_card shadow p-2 h-100">
     <div class="d-flex flex-column justify-content-between h-100 mb-2">
        <div class="p-2">
            <div class="d-flex py-2 mb-2">
              <div class="examdetailsicon"></div>
            </div>
            <h6 class="text-black">{{exam}}</h6>
            <p class="mb-3 program_details">{{{examdescription}}}</p>
            <h6 class="text-black">{{#str}}estimatedtime, local_exams{{/str}}:</h6>
            <p>{{hours}} {{durationstatus}}</p>
            <h6 class="mt-3 text-black">{{#str}}sectorsprogram, local_exams{{/str}}:</h6>
         
          <div class="d-flex sectoricons align-items-center justify-content-start">
           {{#capitalmarket}}
                <div class="d-flex sectoricon capitalmarketsector mr-2">
                    <div class="icon"></div>
                    <span>{{#str}}capital_market, theme_academy{{/str}}</span>
                </div>
                {{/capitalmarket}}
                {{#finance}}
                <div class="d-flex sectoricon financesector mr-2">
                    <div class="icon"></div>
                    <span>{{#str}}finance, theme_academy{{/str}}</span>
                </div>
                {{/finance}}
                {{#insurance}}
                <div class="d-flex sectoricon insurancesector mr-2">
                    <div class="icon"></div>
                    <span>{{#str}}insurance, theme_academy{{/str}}</span>
                </div>
                {{/insurance}}
                {{#banking}}
                <div class="d-flex sectoricon bankingsector">
                    <div class="icon"></div>
                    <span>{{#str}}banking, theme_academy{{/str}}</span>
                </div>
                {{/banking}}
           </div>
        </div>
        <div>

           <hr>
           <div class="program_footer d-flex align-items-center justify-content-between">
               <h6 class="d-flex m-0 homepagetheme_text_color">
                    <i class="fa fa-tags mt-1 mr-1" aria-hidden="true"></i> {{#str}}fees, local_exams{{/str}} : {{sellingprice}} {{#str}}sa_currency,local_trainingprogram{{/str}}
               </h6>
              <a href="{{viewdetails}}" role="button" class="btn btn-primary btn-sm">{{#str}}view_details, local_exams{{/str}}</a>
           </div>
          </div>
        </div>
      </div>
</div>

  {{/hascourses}} 
