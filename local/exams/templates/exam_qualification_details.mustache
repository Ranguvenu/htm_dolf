                {{# requirements}}
                    <li class="p-3 mx-3">{{{examname}}}</li>
                {{/ requirements}}
            </ul>
            </div>
        </div>
    </div>

    <div class="row my-4">
        <div class="col-md-12">
            <h5 class="mb-3 mt-2 text-themecolor">{{#str}}additionalrequirements, local_exams{{/str}}</h5>
            <div class="bg-white shadow rounded p-3 mt-2">
                <p>{{{additionalrequirements}}}</p>
            </div>
        </div>
    </div>

    <div class="row my-4">
        <div class="col-md-12">
            <h5 class="mb-3 mt-2 text-themecolor">{{#str}}competencyweights_details, local_exams{{/str}}</h5>
            <div class="bg-white shadow rounded p-3 mt-2">
                <p>{{{competencyweights}}}</p>
            </div>
        </div>
    </div>
    
</div>
