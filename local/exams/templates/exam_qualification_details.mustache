    <div class="row my-4">
        <div class="col-md-12">
            <h5 class="mb-3 text-themecolor">{{#str}}examprofiles, local_exams{{/str}}</h5>
            {{# userexamreqstatus}}
                <div class="alert alert-danger">{{#str}}achievereqexams, local_exams{{/str}}</div>
            {{/ userexamreqstatus}}
        </div>

        {{# examprofile}}

        <div class="col-md-6">
            <div class="bg-white shadow rounded p-4 mt-2">
                <div class="d-flex">
                    <div class="examdetailsicon"></div><div class="mr-auto p-2">
                    <h6 class="text-themecolor ml-3">{{exam}} </h6> <!--({{profilecode}})-->
                  
                    </div>
