    <div class="d-flex flex-column position-relative">
        <div class="mainsectioncontainer my-4 text-light">
            <div class="d-flex flex-column">
                <div class="d-flex align-items-center">
                   <span class="fa fa-edit"></span> 
                    <strong class="ml-2"> {{#str}}examoverview, local_exams{{/str}} </strong>
                </div>
                <!-- <p class="programdesc my-3"> -->
                    <p class="my-3">
                   {{{description}}}
                </p>
                <div class="d-flex sectors_covered_container align-items-center mt-3 flex-wrap">
                    <h5 class="mr-2">{{#str}}sectors, local_exams{{/str}}</h5>
                    {{#sectordata}}
                        <div class="d-flex border sector_div mr-2"><span class="piximg checkicon">{{# pix }} check_circluaricon_white, local_trainingprogram {{/ pix }}</span>  {{sectorname}}</div>
                    {{/sectordata}}
                </div>
            </div>
        </div>
        <div class="position-absolute pricedetails_container rounded hexabgcontainer text-light h-100 py-3 px-3">
