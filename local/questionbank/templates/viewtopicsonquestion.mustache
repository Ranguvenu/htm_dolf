
{{! Question Topics }}
<div class="form-group row fitem mt-3">
    <div class="col-md-3 col-form-label d-flex pb-0 pr-md-0">
      {{#str}}  
        viewtopics, local_questionbank
      {{/str}}  
    </div>
    <div class=" col-md-9 w-100 mt-3 row">
    {{#topics}}
        <span role="option" data-value="{{names}}" aria-selected="true" class="badge badge-info mb-3 mr-1 p-2 " style="font-size: 100%" data-active-selection="true">
            {{names}}
        </span>
    {{/topics}}
    {{^topics}}
        <div class="alert alert-info alert-block fade in " role="alert">
            {{#str}}
                norecordsfound, local_questionbank        
            {{/str}}
         </div>
    {{/topics}}

    </div>
</div>