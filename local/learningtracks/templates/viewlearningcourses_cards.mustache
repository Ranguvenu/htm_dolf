{{#course}}
<div class="viewlearningcourses_wrapper my-4">
    <div class="row mb-3">
        <div class="col-md-2">
            <div class="viewlearningcoursesimagecontainer" style="background-image: url('{{image}}');"></div>
        </div>
        <div class="col-md-10">
            <div class="mb-3">
                <h4 class="my-3">{{name}}</h4>
            </div>
            <p class="mb-3">{{description}}</p>
            <div class="mb-3">
                <span class="mr-3">{{#str}}by,local_learningtracks{{/str}} ; <b>Abdul Hamid</b></span>
                <span>{{#str}}commenced_on,local_learningtracks{{/str}} : <b>12th Feb 2022</b></span>
            </div>
            <div class="viewlearningcourses_progressbar">
                <div class="d-flex justify-content-between">
                    <h6  class="mb-3">{{#str}}progress,local_learningtracks{{/str}}</h6>
                    <div>{{#str}}completed,local_learningtracks{{/str}} : <b>15%</b></div>
                </div>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/course}}
