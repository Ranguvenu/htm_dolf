{{# learningtrack}}
<div id="learningtrack_details">
    <div class="row">
        <div class="col-md-2 d-flex">
            <div class="programimg w-100 h-100" style="background-image: url('{{ trackimg }}');"></div>
        </div>
        <div class="col-md-10">
            <h5 class="mb-3">{{trackname}}:</h5>
             {{# isdescription}}
                <p class="mb-4 description" >{{{trackdescription}}}</p>
             {{/ isdescription}}
             {{^ isdescription }}
                <p class="alert alert-info text-center">{{#str}}nodesc, local_learningtracks{{/str}}</p>
            {{/ isdescription }}
            <div>
                <h5>{{#str}}learningtrack,local_learningtracks{{/str}}</h5>
                <div class="learningpathprogress_container_hexatheme p-2 mb-3">
                    {{#learning_items}}
                    <div class="progressnode {{completed}}">
                            <div class="line {{completed}}">
                                <span class="arrowicon"></span>
                            </div>
                            <div class="d-flex align-items-start flex-column align-self-start">
                                <span class="progress_icon"></span>
                                <span class="text-center">
                                    <strong> {{count}} </strong><br>
                                    {{#completed}}
                                        <small>{{#str}}completed, local_learningtracks{{/str}}</small>
                                    {{/completed}}
                                    {{^completed}}
                                        <small>{{#str}}notcompleted, local_learningtracks{{/str}}</small>
                                    {{/completed}}
                                </span>
                            </div>
                    </div>
                    
                    {{/learning_items}}
                </div>
            </div>
        </div>
        <div class="col-md-12">
    
            <h4 class="my-3">{{#str}}learning_track_details, local_learningtracks{{/str}}</h4>
            <hr>
            <!-- learning track programs -->
                <div class="tab-content" id="learning_tab_contents">
                    <div class="tab-pane fade show active" id="courses"  role="tabpanel" aria-labelledby="coures-tab">
                            <div id="viewlearningcourses_container" class="my-4">
                                <div id="courses_tabdata" data-region="courses_tabdata-preview-container">
                                    <div data-region="courses_tabdata-count-container"></div>
                                    <div data-region="courses_tabdata-list-container" id ="coursesid"></div> 
                                </div>  
                            </div>
                    </div>
                </div>
        </div>
        
    </div>
</div>
{{/learningtrack}}

