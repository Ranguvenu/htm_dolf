 {{#viewtypeCard}}
            <table class="table generaltable">
                <thead>
                    <tr>
                        <th>{{#str}}name, local_learningtracks{{/str}}</th>
                        <th>{{#str}}noperformance, local_learningtracks{{/str}}</th>
