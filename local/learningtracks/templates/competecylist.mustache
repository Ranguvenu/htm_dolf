                <tbody>
                {{#records}}
                    <tr>
                        <td>{{fullname}}</td>
                        <td>{{noperformance}}</td>
                        <td>{{code}}</td>
                        <td>{{type}}</td>
                    </tr>
                    {{/records}}
                </tbody>
            </table>
    {{/viewtypeCard}}
