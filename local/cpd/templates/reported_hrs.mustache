{{# response}}
{{#records}}
            <table class="table generaltable">
                    <thead> 
                        <tr>
                            <th>{{#str}}trainingpro,local_cpd{{/str}}</th>
                            <th>{{#str}}credithrs,local_cpd{{/str}}</th>
                            <th>{{#str}}requeststatus,local_cpd{{/str}}</th>
                            <th>{{#str}}approvaldate,local_cpd{{/str}}</th>
                            <th>{{#str}}evidencetype,local_cpd{{/str}}</th>
                            {{#action}}
                                <th>{{#str}}action,local_cpd{{/str}}</th> 
                             {{/action}}
                        </tr>
                    </thead>
                    <tbody>
                    {{# hasreportedhrs}}
                        <tr>
                            <td>{{title}}</td>
                            <td>{{credithrs}}</td>
                            <td>{{requeststatus}}</td>
                            <td>{{approvedate}}</td>
                            <td>{{evidencetype}}</td>
                            {{#action}}
                            <td>
                                <button class="btn btn-sm btn-primary" data-action = "viewevidence" data-id = "{{id}}" data-type = "{{evidtype}}">{{#str}}view{{/str}}</button>
                                <button  class="btn btn-sm btn-danger" data-action = "deleteevidence" data-id = "{{id}}" data-type = "{{evidtype}}" data-name = "{{title}}" data-totalcount = "{{totalcount}}">{{#str}}delete,local_cpd{{/str}}</button>
                            </td>
                            {{/action}}
                        </tr>
                        {{/ hasreportedhrs}}
                    </tbody>
            </table>
   
{{/ records}}
{{/ response}}
 </div>    
</div>
