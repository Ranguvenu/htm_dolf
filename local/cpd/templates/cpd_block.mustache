{{# response}}
            <table class="table generaltable">
                <thead>
                    <tr>
                        <th>{{#str}}name,local_cpd{{/str}}</th>
                        <th>{{#str}}code,local_cpd{{/str}}</th>
                        <th>{{#str}}expiration, local_cpd{{/str}}</th>
                        <th>{{#str}}renewalrequirement, local_cpd{{/str}}</th>
                        <th>{{#str}}action,local_cpd{{/str}}</th>
                    </tr>
                </thead>
                <tbody>
                {{#records}}
                    <tr>
                        <td><a href = "{{cpdurl}}">{{title}}</a></td>
                        <td>{{code}}</td>
                        <td>{{validation}}</td>
                        <td>{{hourscreated}}</td>
                        <td>
                            <div class="d-flex action_btns">
                            {{#edit}}
                                 <a alt="{{#str}}edit{{/str}}" title="{{#str}}edit{{/str}}"  data-action="createcpd" data-id = "{{id}}"><span class="bg-success text-white"><i class="fa fa-pencil" aria-hidden="true"></i></span></a>
                            {{/edit}}
                            {{#delete}}
                            <a alt="{{#str}}delete{{/str}}" title="{{#str}}delete{{/str}}"  data-action="deletecpd" data-id = "{{id}}" data-name="{{title}}"><span class="bg-danger text-white"><i class="fa fa-trash-o" aria-hidden="true"></i></span></a>
                            {{/delete}}
                            </div>
                        </td>
                    </tr>
                    {{/records}}
                </tbody>
            </table>
{{/ response}}
{{#js}}
    require(['local_cpd/cpdform'], function(s) {
        s.init();
    });
{{/js}}