{{#response}}
   {{#records}}
       <table class="table generaltable">
            <thead> 
                <tr>
                    <th>{{#str}}trainingpro,local_cpd{{/str}}</th>
                    <th>{{#str}}credithrs,local_cpd{{/str}}</th>
                    <th>{{#str}}description,local_cpd{{/str}}</th>
                    <th>{{#str}}action,local_cpd{{/str}}</th>
                </tr>
            </thead>
            <tbody>
                {{# hasrecords}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{creditedhours}}</td>
                    <td>{{# isdescription}}
                        {{^ descriptionstring}}
                            <p class="text-muted">{{{ description }}}</p>
                        {{/ descriptionstring }}
                        {{# descriptionstring}}
                            <p class="text-muted">{{{ descriptionstring }}}...</p>
                        {{/ descriptionstring }}
                    {{/ isdescription}}
                    {{^ isdescription }}
                        <p class="alert alert-info text-center">{{#str}}nodesc, local_cpd{{/str}}</p>
                    {{/ isdescription }}</td>
                    {{# action}}
                    <td>
                        <div class="d-flex align-items-center">
                        {{^programcompleted}}
                        <button class="mr-1 btn btn-sm btn-primary" data-action = "edittrainigprogram" data-id = "{{id}}"data-cpdid = "{{cpdid}}">{{#str}}modify, local_cpd{{/str}}</button>
                        {{/programcompleted}}
                        <button class="btn btn-sm btn-danger" data-action = "deletetrainigprogram" data-id = "{{id}}" data-name = "{{name}}">{{#str}}delete, local_cpd{{/str}}</button>
                        </div>
                    </td>
                    {{/ action}}
                </tr>
                {{/ hasrecords}}
            </tbody>
      </table>
    {{/records}}
{{/response}}