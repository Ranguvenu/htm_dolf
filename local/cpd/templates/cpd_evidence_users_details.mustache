{{#response}}
    <div class="row">
            <div class="col-6 text-black">
                <h5> {{#str}}traineelist,local_cpd{{/str}} ({{totalcount}} {{#str}}trainee,local_cpd{{/str}}) </h5>
            </div>
            <div class="col-6 text-right"></div>
       </div>
    {{^norecords}}
        <div class="text-center alert alert-info mt-1" data-region="empty-message">{{nodata}}</div>
    {{/norecords}}
    {{#norecords}}
    <div class="table-responsive mt-4">
        <table class="table generaltable">
            <thead> 
                    <tr>
                        <th>{{#str}}traineename,local_cpd{{/str}}</th>
                        <th>{{#str}}id,local_cpd{{/str}}</th>
                        <th>{{#str}}dateclaimed,local_cpd{{/str}}</th>
                        <th>{{#str}}requeststatus,local_cpd{{/str}}</th>
                        <th>{{#str}}evidencetype,local_cpd{{/str}}</th>
                        <th>{{#str}}status,local_cpd{{/str}}</th>
                        <th>{{#str}}action, local_cpd{{/str}}</th>
                    </tr>
            </thead>
            <tbody>
                {{# records}}
                <tr>
                    <td><a href="{{userviewurl}}" >{{username}}</a></td>
                    <td>{{userid_number}}</td>
                    <td>{{dateclaimed}}</td>
                    <td>{{requeststatus}}</td>
                    <td>{{evidencetype}}</td>
                    <td>{{status}}</td>
                    <td>
                        <div class="d-flex action_btns">
                            <a tabindex="0" role="button" data-action = "evidenceuserview" data-id ="{{id}}" data-userid ="{{userid}}" data-type ="{{evdtype}}" alt="{{#str}}view{{/str}}" vieworganization title="{{#str}}view{{/str}}"><span class="bg-primary text-white"><i class="fa fa-search-plus"></i></span></a>
                            {{#action}}
                                {{# statusaction}}
                                    <a tabindex="0" role="button" alt="{{#str}}approve{{/str}}" title="{{#str}}approve{{/str}}" data-action="evidencestatus" data-id ="{{id}}" data-status = "1" data-title="approve" data-creditedhours = "{{creditedhours}}"><span class="bg-success text-white"><i class="fa fa-check" aria-hidden="true"></i></span></a>
                                    <a alt="{{#str}}cancel{{/str}}" title="{{#str}}cancel{{/str}}" data-action="evidence_rejectstatus" data-id ="{{id}}"  data-title="reject" data-status = "2" data-creditedhours = "{{creditedhours}}"><span class="bg-danger text-white"><i class="fa fa-times" aria-hidden="true"></i></span></a>
                                {{/ statusaction}}
                            {{/action}}
                        </div>
                    </td>
                </tr>
                {{/ records}}
            </tbody>
        </table>
        </div>
    {{/norecords}}
{{/ response}}

{{#js}}
    require(['local_cpd/cpdform'], function(s) {
        s.init();
    });
{{/js}}