<div class="row mt-3" id="cdp_view_container">
    <div class="col-md-8">
        <h4 class="mt-4">{{title}} {{#str}}details,local_cpd{{/str}}</h4>
        <div class="row" >
            <div class="col-sm-6">
                <div class="detail_label_container">
                    <h6 class="">{{#str}}name,local_cpd{{/str}}</h6>
                    <h5>{{title}}</h5>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="detail_label_container">
                    <h6 class="ss">{{#str}}validation,local_cpd{{/str}}</h6>
                    <h5>{{validation}} {{#str}}validation,local_cpd{{/str}}</h5>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="detail_label_container">
                    <h6 class="">{{#str}}renewal,local_cpd{{/str}}</h6>
                    <h5>{{hourscreated}}</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <!-- image container -->
         <img src="{{{ cpdimg }}}" class="img-fluid cpdlogo" />
    </div>
    <div class="col-12 bg-theme my-3">
        <div class="info_banner py-4 text-white">
            <h5>{{#str}}description,local_cpd{{/str}}</h5>
            <p>{{{description}}}</p>
        </div>
    </div>
</div>

{{#js}}
    require(['local_cpd/cpdform'], function(s) {
        s.init();
    });
{{/js}}
