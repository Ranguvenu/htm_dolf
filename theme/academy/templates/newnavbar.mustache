    require(['tool_product/product'], function(product) {

        let products = localStorage.getItem('products');

        products = JSON.parse(products);

        var productscount= products ? products.length : 0;

        $('.basketicon').html('<span class="basketcount">'+productscount+'</span>');
    });
    $(window).scroll(function() {    
        var scroll = $(window).scrollTop();
        if (scroll >= 80) {           
            $(".newnavbar").addClass("sticky");
        }else{
            $(".newnavbar").removeClass("sticky"); 
        }
    });
{{/js}}
